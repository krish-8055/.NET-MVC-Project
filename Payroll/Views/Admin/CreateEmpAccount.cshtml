@model CreateEmpAccount

@{
    ViewData["Title"] = "Add Employee";
}
@{
  Layout = "_Admin";
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
  font-family: "Lato", sans-serif;
  transition: background-color .5s;
}

.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: #818181;
  display: block;
  transition: 0.3s;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}

#main {
  transition: margin-left .5s;
  padding: 16px;
}

@@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
</style>
</head>
<body>
<script>
function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
  document.getElementById("main").style.marginLeft = "250px";
  document.body.style.backgroundColor = "rgba(0,0,0,0.4)";
}

function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
  document.getElementById("main").style.marginLeft= "0";
  document.body.style.backgroundColor = "white";
}
</script>
<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <h2 style="color: #f1f1f1;"> Menu </h2>
  <a  asp-controller="Admin" asp-action="AdminHome">
          <span>Main dashboard</span>
        </a>
        <a asp-controller="Admin" asp-action="CreateEmpAccount">
          <span>Add Employee</span>
        </a>
        <a  asp-controller="Admin" asp-action="EmployeeDetails" >
            <span>Employee Details</span></a>
        <a  asp-controller="Admin" asp-action="SalaryReportSearch">
          <span>Search Employee Report</span></a>
        <a  asp-controller="Admin" asp-action="SalaryReport"><span>Salary Report</span></a>
        @* <a  asp-controller="Admin" asp-action="AddAdmin"><span>Add Admin</span></a> *@
        <a  asp-controller="Admin" asp-action="GenerateSalary"><span>Generate Salary</span></a>       
        <a href="#">
         <span>Change Employee Password</span>
        </a>

</div>
<span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; open</span>
<div id="main">

  <div style="top: 50%;">
    <div style= class="container-fluid">
        <div class="col py-3">
  <div  class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <form method="post">
              <h1 class="text-center">Add Employee Profile:</h1>
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="Name" class="form-control" pattern="^[A-Za-z.\s_-]+$" title="Must contain only uppercases and lowercases"  required/>
        <label class="form-label" asp-for="Name" for="form6Example1">Name</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example2" asp-for="Address" class="form-control" />
        <label class="form-label" asp-for="Address" for="form6Example2">Address</label>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="EmpID" class="form-control" />
        <label class="form-label" asp-for="EmpID" for="form6Example1">Employee ID</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="City" class="form-control" />
        <label class="form-label" asp-for="City" for="form6Example1">City</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example2" asp-for="Pincode" class="form-control" />
        <label class="form-label" asp-for="Pincode" for="form6Example2">Pincode</label>
      </div>
    </div>
  </div>


  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <label asp-for="Mobile">Mobile Number</label>
        <input  asp-for="Mobile"placeholder="Mobile Number" pattern= "^[6-9][0-9]{9}$" title="Mobile Number must be valid"required/>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <label  asp-for="Salary">Salary</label>
        <input type="number" asp-for="Salary"placeholder="Salary"required/>
      </div>
    </div>
  </div>
  
  

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="BankAccNo"  class="form-control" placeholder="Account Number" pattern="^[0-9]{12}$" title="Account number should contain only numbers and have exactly 12 digits" required />
        <label class="form-label" asp-for="BankAccNo" for="form6Example1">Bank Account No.</label>
      </div>
    </div>

    <div class="col">
    <label asp-for="Department">Department</label>
        <select asp-for="Department">
            <option value="Development">Development</option>
            <option value="Testing">Testing</option>
            <option value="HR">HR</option>
            <option value="Research">Research</option>
        </select>
    </div>  
    <div class="col">
      <div class="form-outline">
        <label asp-for="Email"></label>
        <input type="email" pattern=".+gmail\.com" asp-for="Email" placeholder="Email" title="Enter a valid Email ID"  required/>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
       <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="Password" placeholder="Password" class="form-control"  pattern="/^[a-zA-Z0-9!@@#\$%\^\&*_=+-]{8,12}$/g"  title="Must contain atleast One Number,One Uppercase,One Lowercase and One Special Character,and have atleast 8 or more characters" required/>
        <label class="form-label" asp-for="Password" for="form6Example1">Password</label>
      </div>

       <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="RePassword" class="form-control" placeholder="Confirm Password" pattern="/^[a-zA-Z0-9!@@#\$%\^\&*_=+-]{8,12}$/g"  title="Must contain atleast One Number,One Uppercase,One Lowercase and One Special Character,and have atleast 8 or more characters" required/>
        <label class="form-label" asp-for="RePassword" for="form6Example1">Confirm Password</label>
      </div>
  </div>

  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>

  <a asp-action="AdminHome">Go Back</a>

</form>
          </div>
        </div>
      </div>
    </div>
  </div>

        </div>
    </div>
  </div>
</body>
    
</html> 
