th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(62, 194, 132);
        border-radius: 7%;
    }
    label{
        margin-left: 400px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
    table{
        margin-left: 150px;
        margin-top: 10%;

    }
