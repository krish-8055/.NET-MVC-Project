@model CreateEmpAccount

<div style="top: 50%;">
    <div style= class="container-fluid">
        <div class="col py-3">
  <div  class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <form method="post" asp-action="EmpUpdat" asp-controller="Admin">
              <h1 class="text-center">Update Employee Profile:</h1>
  <!-- 2 column grid layout with text inputs for the first and last names -->
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="Name" class="form-control" pattern="^[A-Za-z.\s_-]+$" title="Must contain only uppercases and lowercases"  required/>
        <label class="form-label" asp-for="Name" for="form6Example1">Name</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example2" asp-for="Address" class="form-control" />
        <label class="form-label" asp-for="Address" for="form6Example2">Address</label>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="EmpID" class="form-control" />
        <label class="form-label" asp-for="EmpID" for="form6Example1">Employee ID</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="City" class="form-control" />
        <label class="form-label" asp-for="City" for="form6Example1">City</label>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example2" asp-for="Pincode" class="form-control" />
        <label class="form-label" asp-for="Pincode" for="form6Example2">Pincode</label>
      </div>
    </div>
  </div>


  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <label asp-for="Mobile">Mobile Number</label>
        <input  asp-for="Mobile"placeholder="Mobile Number" pattern= "^[6-9][0-9]{9}$" title="Mobile Number must be valid"required/>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <label  asp-for="Salary">Salary</label>
        <input type="number" asp-for="Salary"placeholder="Salary"required/>
      </div>
    </div>
  </div>

  

  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
        <input type="text" id="form6Example1" asp-for="BankAccNo"  class="form-control" placeholder="Account Number" pattern="^[0-9]{12}$" title="Account number should contain only numbers and have exactly 12 digits" required />
        <label class="form-label" asp-for="BankAccNo" for="form6Example1">Bank Account No.</label>
      </div>
    </div>

    <div class="col">
    <label asp-for="Department">Department</label>
        <select asp-for="Department">
            <option value="Development">Development</option>
            <option value="Testing">Testing</option>
            <option value="HR">HR</option>
            <option value="Research">Research</option>
        </select>
    </div>  
    <div class="col">
      <div class="form-outline">
        <label asp-for="Email"></label>
        <input type="email" pattern=".+gmail\.com" asp-for="Email" placeholder="Email" title="Enter a valid Email ID"  required/>
      </div>
    </div>
  </div>
  <form asp-controller="Admin" asp-action="EmployeeDetails" >
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

                    <button type="submit" class="btn btn-primary btn-lg">Update</button>
                    <p style="margin-left: 150px;color:red;">@ViewBag.Message</p>
                  </div>
    </form>
  <a asp-action="EmployeeDetails">Go Back</a>

</form>
          </div>
        </div>
      </div>
    </div>
  </div>

        </div>
    </div>
  </div>